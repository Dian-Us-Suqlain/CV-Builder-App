<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Personal Information" />

        <TextView
            android:id="@+id/tv_worker_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"/>

        <TextView
            android:id="@+id/tv_worker_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User About"/>

        <TextView
            android:id="@+id/tv_worker_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Phone Number"/>

        <TextView
            android:id="@+id/tv_worker_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Email"/>

        <TextView
            android:id="@+id/tv_worker_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Address"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Education" />

        <TextView
            android:id="@+id/tv_institute_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Institute Name"/>

        <TextView
            android:id="@+id/tv_degree"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Degree"/>

        <TextView
            android:id="@+id/tv_major1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Major 1"/>

        <TextView
            android:id="@+id/tv_major2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Major 2"/>

        <TextView
            android:id="@+id/tv_major3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Major 3"/>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Projects" />

        <TextView
            android:id="@+id/tv_project1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Project 1"/>

        <TextView
            android:id="@+id/tv_project1_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Project 1 Description"/>

        <TextView
            android:id="@+id/tv_project2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Project 2"/>

        <TextView
            android:id="@+id/tv_project2_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Project 2 Description"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Research Background" />

        <TextView
            android:id="@+id/tv_area_of_interest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Area of Interest"/>

        <TextView
            android:id="@+id/tv_area_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Area of Interest Description"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Key Skills" />

        <TextView
            android:id="@+id/tv_key_skill1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Key Skill 1"/>

        <TextView
            android:id="@+id/tv_key_skill2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Key Skill 2"/>

        <TextView
            android:id="@+id/tv_key_skill3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:hint="Key Skill 3"/>

    </LinearLayout>

</ScrollView>